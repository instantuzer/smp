
output eDP-1 scale 1
output * bg ~/lol/bgx fill


font pango:Terminus 20

bar {

    #status_command ~/.config/sway/status.sh
    status_command i3status
    output eDP-1
    height 28
    separator_symbol " "
    position bottom

	colors {
        	background #0c0c0c
        	statusline #ffa800
    }

}

